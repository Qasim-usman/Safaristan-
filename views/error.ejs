  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="alert alert-danger shadow-lg rounded-3 p-4" role="alert">
        <h2 class="alert-heading text-danger mb-3">
          <i class="bi bi-exclamation-triangle-fill"></i> Error <%= status %>
